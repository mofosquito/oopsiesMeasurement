<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".phenomena_illusions_page1">

    <TextView
        android:id="@+id/phenomena_illusions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#123456"
        android:gravity="center"
        android:text="@string/phenomena_illusions_title"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/phenomena_illusions_secondaryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phenomena_illusions_title"
        android:text="@string/phenomenon_illusions_intro"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phenomena_definition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phenomena_illusions_secondaryTitle"
        android:text="@string/phenomenon_illusions_definition"
        android:textColor="#000000"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/image_aurora"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_below="@id/phenomena_definition"
        android:layout_centerInParent="true"
        android:background="@drawable/aurora" />

    <TextView
        android:id="@+id/text_aurora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_aurora"
        android:gravity="center"
        android:text="@string/text_aurora"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/text_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_aurora"
        android:gravity="center"
        android:text="@string/text_explanation"
        android:textColor="#000000" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_star_explode"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_below="@id/text_explanation"
        android:layout_centerInParent="true"
        android:src="@drawable/star_explode" />

    <TextView
        android:id="@+id/text_star_explode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gif_star_explode"
        android:gravity="center"
        android:text="@string/text_star_explode"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_below="@+id/text_star_explode"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_style1"
        android:text="@string/buttonNext"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_below="@id/text_star_explode"
        android:layout_alignStart="@+id/buttonNext"
        android:layout_marginStart="-130dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/button_style1"
        android:text="@string/buttonBack"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_below="@id/text_star_explode"
        android:layout_alignEnd="@+id/buttonNext"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/button_style1"
        android:text="@string/buttonHome"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

</RelativeLayout>