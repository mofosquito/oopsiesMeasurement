        <TextView
            android:id="@+id/textView0"
            android:layout_width="318dp"
            android:layout_height="46dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="280dp"
            android:text="A group of student's attempt on creating an app"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:typeface="serif"
            android:text="We would like to hear your valuable suggestions. Please fill in the feedback form in the settings page." />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="130dp"
            android:text="Our Team"
            android:typeface="serif"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="480dp"
            android:text="Daryl Kardil Kelabit"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="520dp"
            android:text="Adrian Lau Hui Yi"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="560dp"
            android:text="Abdullah Al-Hisyam"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:typeface="serif" />
    </FrameLayout>

</RelativeLayout>